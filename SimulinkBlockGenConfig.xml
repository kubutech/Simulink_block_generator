<?xml version="1.0" encoding="UTF-8"?>
<X-PlaneToSimulinkInterface>
    <!--name- block name, access- specifiy whether your Simulink writes to X-Plane(write) or reads from X-Plane(read), updateRate- rate with which plugin will update data(in ms)-->
    <simulinkBlock name = "IMU" access = 'read' updateRate = '10'>
        <variable>
            <name>p</name>
            <type>float</type>
            <Dataref>sim/flightmodel/position/Prad</Dataref>
        </variable>
        <variable>
            <name>q</name>
            <type>float</type>
            <Dataref>sim/flightmodel/position/Qrad</Dataref>
        </variable>
        <variable>
            <name>r</name>
            <type>float</type>
            <Dataref>sim/flightmodel/position/Rrad</Dataref>
        </variable>
        <variable>
            <name>axial_acceleration</name>
            <type>float</type>
            <Dataref>sim/flightmodel/forces/g_axil</Dataref>
        </variable>
        <variable>
            <name>normal_acceleration</name>
            <type>float</type>
            <Dataref>sim/flightmodel/forces/g_nrml</Dataref>
        </variable>
        <variable>
            <name>side_acceleration</name>
            <type>float</type>
            <Dataref>sim/flightmodel/forces/g_side</Dataref>
        </variable>
    </simulinkBlock>

    <simulinkBlock name = "Angles_real" access = 'read' updateRate = '10'>
        <variable>
            <name>pitch</name>
            <type>float</type>
            <Dataref>sim/cockpit/gyros/the_ind_ahars_pilot_deg</Dataref>
        </variable>
        <variable>
            <name>true_heading</name>
            <type>float</type>
            <Dataref>sim/flightmodel/position/psi</Dataref>
        </variable>
        <variable>
            <name>roll</name>
            <type>float</type>
            <Dataref>sim/cockpit/gyros/phi_ind_ahars_pilot_deg</Dataref>
        </variable>
    </simulinkBlock>

    <simulinkBlock name = "GPS" access = 'read' updateRate = '10'>
        <variable>
            <name>lat</name>
            <type>double</type>
            <Dataref>sim/flightmodel/position/latitude</Dataref>
        </variable>
        <variable>
            <name>lon</name>
            <type>double</type>
            <Dataref>sim/flightmodel/position/longitude</Dataref>
        </variable>
        <variable>
            <name>elevation</name>
            <type>double</type>
            <Dataref>sim/flightmodel/position/elevation</Dataref>
        </variable>
    </simulinkBlock>

    <simulinkBlock name = "Gravity" access = 'read' updateRate = '10'>
        <variable>
            <name>g</name>
            <type>float</type>
            <Dataref>sim/weather/gravity_mss</Dataref>
        </variable>
    </simulinkBlock>

    
</X-PlaneToSimulinkInterface>
